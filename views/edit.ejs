<% include ./partials/header%>
<div class="ui main text container segment">
	<div class="ui huge header">Edit "<%= blog.title%>"</div>
	<div class="ui form">	
		<form action="/blogs/<%= blog._id%>?_method=PUT" method="POST"> <!--html forms doesnt support put or delete request  thus methid overrid is done in ?_methis=PUT or DELETE -->
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" value="<%= blog.title%>">
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" name="blog[image]" value="<%= blog.image%>">
			</div>
			<div class="field">
				<label>Blog Content</label>
				<textarea name="blog[body]" placeholder="Blog post"><%= blog.body%></textarea>
			</div>
			<input class= "ui violet inverted button" type="submit" name="button">
		</form>
	</div>
</div>
<% include ./partials/footer%>